<grammar version="1.0" xml:lang="fr-FR" mode="voice" root="ruleZibase" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
  <rule id="ruleZibase" scope="public">
    <example>Sarah allume la lumiaire du salon</example>
    <tag>out.action=new Object(); </tag>
    <item>Sarah</item>
	
     <one-of>
      <item>allume<tag>out.action.actionModule="ON";out.action.ttsAction="j'allume";</tag></item>
	  <item>active<tag>out.action.actionModule="ON";out.action.ttsAction="j'active";</tag></item>
	  <item>ouvre<tag>out.action.actionModule="ON";out.action.ttsAction="j'ouvre";</tag></item>
      <item>aiteint<tag>out.action.actionModule="OFF";out.action.ttsAction="j'aiteint";</tag></item>
	  <item>daisactive<tag>out.action.actionModule="OFF";out.action.ttsAction="je daisactive";</tag></item>
	  <item>ferme<tag>out.action.actionModule="OFF";out.action.ttsAction="je ferme";</tag></item>
	  <item>lance le cainario<tag>out.action.ttsAction="je lance le sainario"</tag></item>
	  <item>Quelle est</item>
    </one-of> 
	
    <one-of>
	<!-- Module Zwave -->
		<item>les volets de la salle a manger
			<tag>
			out.action.module="volet_sam";
			</tag>
		</item>
		
		<item>les volets du salon
			<tag>
			out.action.module="volet_salon";
			</tag>
		</item>
		
		<item>la lumiaire de la cuisine
			<tag>
			out.action.module="lumiere_cuisine";
			</tag>
		</item>
		
	<!-- Module Chacon -->
		<item>la lumiaire du bureau
			<tag>
			out.action.module="lumiere_bureau";
			</tag>
		</item>
		
		<item>la lumiaire de la chambre
			<tag>
			out.action.module="lumiere_chambre_amis";
			</tag>
		</item>
		
		<item>la lumiaire de la salle de bain
			<tag>
			out.action.module="lumiere_sdb";
			</tag>
		</item>
		
		<item>la lumiaire de l'aquarium
			<tag>
			out.action.module="prise_aqua";
			</tag>
		</item>
				
		<item>la lampe du salon
			<tag>
			out.action.module="lampe_salon";
			</tag>
		</item>
		
		
	<!-- Module Blyss  -->
		<item>la VMC
			<tag>
			out.action.module="vmc";
			</tag>
		</item>
			
	<!-- Sondes -->
		<item>la température extérieure
			<tag>
			out.action.module="sonde_temp_ext";
			</tag>
		</item>	
		
		<item>la température dans la salle de bain
			<tag>
			out.action.module="sonde_temp_sdb";
			</tag>
		</item>	
		
		<item>l'hygrométrie extérieure
			<tag>
			out.action.module="sonde_hygro_ext";
			</tag>
		</item>	
		
		<item>l'hygrométrie dans la salle de bain
			<tag>
			out.action.module="sonde_hygro_sdb";
			</tag>
		</item>	
		
		<item>la consommation de la maison
			<tag>
			out.action.module="sonde_conso_elec";
			</tag>
		</item>	
			
	<!-- Scenario  -->
		<item>alarme daisactivaie
			<tag>
			out.action.module="alarme_OFF";
			</tag>
		</item>
		<item>alarme activaie
			<tag>
			out.action.module="alarme_ON";
			</tag>
		</item>
    </one-of>
	
	<item repeat="0-1">
	<one-of>
			<item>a vingt cinq pour cent
			<tag>
				out.action.ttsDim="a vingt cinq pour cent";
				out.action.dimValue=25;
			</tag>
		</item>
		<item>a cinquant pour cent
			<tag>
				out.action.ttsDim="a cinquante pour cent";
				out.action.dimValue=50;
			</tag>
		</item>
		<item>a soixante quinze pour cent
			<tag>
				out.action.ttsDim="a soixante quinze pour cent";
				out.action.dimValue=75;
			</tag>
		</item>
		<item>a cent pour cent
			<tag>
				out.action.ttsDim="a cent pour cent";
				out.action.dimValue=100;
			</tag>
		</item>
	</one-of>
	</item>
    <tag>out.action._attributes.uri="http://127.0.0.1:8080/sarah/zibase";</tag>
  </rule>
</grammar>
              